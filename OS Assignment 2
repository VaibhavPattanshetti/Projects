#include <iostream>
#include<stdio.h>
#include<unistd.h>
#include<sys/types.h>

using namespace std;

int main() {
    pid_t p;
    cout<<"Before Fork"<<endl;
    
    p = fork();
    
    if(p == 0){
        cout<<"I am child having id "<<getpid()<<endl;
        cout<<"My parent's id is "<<getppid()<<endl;
    }else if(p > 0){
        cout<<"My child's id is "<<p<<endl;
        cout<<"I am parent having id "<<getpid()<<endl;
    }else{
        cout<<"Child not created"<<endl;
    }
    
    cout<<"Common"<<endl;

    return 0;
}

















#include <iostream>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

using namespace std;

int main()
{
    int fd[2], n;
    char buffer[100];
    pid_t p;

    if (pipe(fd) == -1) {
        perror("Pipe not created");
        return 1;
    }

    p = fork();

    if (p < 0){
        perror("Child not created");
        return 1;
    }

    if (p > 0){
        close(fd[0]);
        cout<<"Passing value to the child\n";
        write(fd[1], "hello\n", 6);
        close(fd[1]);
        wait(NULL);
    }else{
        close(fd[1]);
        cout<<"Child received data:\n";
        n = read(fd[0], buffer, 100);
        write(1, buffer, n);
        close(fd[0]);
    }

    return 0;
}
