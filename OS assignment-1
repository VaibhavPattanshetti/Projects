#include <iostream>
using namespace std;

class CPUScheduling{
    int n, time = 0;
    int at[10], bt[10], ct[10], tat[10], wt[10], rt[10];
    int completed = 0;

public:

    void AddData(){
        cout << "Enter number of processes: ";
        cin >> n;

        for (int i = 0; i < n; i++) {
            cout << "Enter AT and BT of P" << (i+1) << ": ";
            cin >> at[i] >> bt[i];
            rt[i] = bt[i];
        }
        
        cout<<endl;
    }
    
    void Print(){
        float AvgWT=0,AvgTAT=0;
        
        cout<<"Non-Premptive SJF";
        cout << "\nP\tAT\tBT\tCT\tTAT\tWT\n";
        for (int i = 0; i < n; i++) {
            cout << "P" << (i+1) << "\t" << at[i] << "\t" << bt[i]
                 << "\t" << ct[i] << "\t" << tat[i]
                 << "\t" << wt[i] << endl;
            AvgWT += wt[i];
            AvgTAT += tat[i];
        }
        
        AvgWT = AvgWT/n;
        AvgTAT = AvgTAT/n;
        cout<<"Average Weight : "<<AvgWT<<endl;
        cout<<"Average TAT : "<<AvgTAT<<endl;
        cout<<endl;
    }

    void NonPremptiveSJF(){
        time = 0;
            completed = 0;
            for(int i = 0; i < n; i++)
                rt[i] = bt[i];
                
        while (completed < n) {
                
            int minBT = 999, p = -1;

            for (int j = 0; j < n; j++) {
                if (at[j] <= time && rt[j] > 0 && bt[j] < minBT) {
                    minBT = bt[j];
                    p = j;
                }
            }

            if (p == -1) {
                time++;
            } else {
                time += bt[p];
                rt[p] = 0;
                ct[p] = time;
                tat[p] = ct[p] - at[p];
                wt[p] = tat[p] - bt[p];
                completed++;
            }
        }
        
        
        cout<<"Non-Premptive SJF";
        Print();
    }
    
    void PremptiveSJF(){
        time = 0;
            completed = 0;
            for(int i = 0; i < n; i++)
                rt[i] = bt[i];
    
        while (completed < n) {

            int minRT = 9999, p = -1;
    
            for (int j = 0; j < n; j++) {
                if (at[j] <= time && rt[j] > 0 && rt[j] < minRT) {
                    minRT = rt[j];
                    p = j;
                }
            }
    
            if (p == -1) {
                time++;   // CPU idle
            } else {
                rt[p]--;  // execute for 1 unit
                time++;
    
                // if process finishes
                if (rt[p] == 0) {
                    ct[p] = time;
                    tat[p] = ct[p] - at[p];
                    wt[p] = tat[p] - bt[p];
                    completed++;
                }
            }
        }
        
        cout<<"Premptive SJF";
        Print();
    }
    
    void FCFS(){
        time = 0;
        completed = 0;
        for(int i = 0; i < n; i++)
            rt[i] = bt[i];
                
        while (completed < n) {
                
            int p = -1, MinAT=99;

            for (int j = 0; j < n; j++) {
                if (at[j] <= time && at[j] < MinAT && rt[j] > 0) {
                    MinAT = at[j];
                    p = j;
                }
            }

            if (p == -1) {
                time++;
            } else {
                time += bt[p];
                rt[p] = 0;
                ct[p] = time;
                tat[p] = ct[p] - at[p];
                wt[p] = tat[p] - bt[p];
                completed++;
            }
        }
        
        cout<<"FCFS";
        Print();
    }
    
};


int main() {
    CPUScheduling obj;
   
    obj.AddData();
    obj.NonPremptiveSJF();
    obj.PremptiveSJF();
    obj.FCFS();

    return 0;
}


// Enter number of processes: 7
// Enter AT and BT of P1: 0 6
// Enter AT and BT of P2: 1 4
// Enter AT and BT of P3: 2 5
// Enter AT and BT of P4: 3 3
// Enter AT and BT of P5: 4 6
// Enter AT and BT of P6: 5 2
// Enter AT and BT of P7: 6 4


